<!DOCTYPE html>
<html lang="en">
<!-- Starts Head Section -->

<head>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="icon" type="image/x-icon" href="/static/images/cooking-logo.jpg">
    <title>Petstagram</title>
</head>

<!-- Starts Body Section -->

<body>
    <!--Error Container-->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <!-- Starts Header Section with Navigation Bar -->
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="logo">
                    <!-- Link to Home Page -->
                    <a href="/">
                        <img width="50px" src="/static/images/cooking-logo.jpg" alt="img1">
                    </a>
                    <!-- Link to Home Page -->
                    <a class="home" href="/">
                        <i>Cookstagram</i>
                    </a>
                </div>

                <div class="nav-links">
                    <ul class="nav-group">
                        <li class="nav-item">
                            <!-- Link to Catalog Page -->
                            <a href="/recipes/catalog">
                                <i>Catalog</i>
                            </a>
                        </li>



                        {{#if isAuthenticated}}
                        <!--For login users-->
                        <li class="nav-item">
                            <!-- Link to Add Photo Page -->
                            <a href="/recipes/add">
                                <i>Add Recipe</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <!-- Link to Profile Page -->
                            <a href="/profile">
                                <i>Profile</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <!-- Link to Logout Page -->
                            <a href="/logout">
                                <i>Logout</i>
                            </a>
                        </li>

                        {{else}}
                        <!--For Guest User-->
                        <li class="nav-item">
                            <!-- Link to Login Page -->
                            <a href="/login">
                                <i>Login</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <!-- Link to Register Page -->
                            <a href="/register">
                                <i>Register</i>
                            </a>
                        </li>

                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    {{{body}}}

    <!-- Starts Footer Section -->
    <div class="footer">
        <span class="footer-section">
            Copyright Â© 2023 Anatoli Pavlov - All Rights Received
        </span>
    </div>

</body>

</html>